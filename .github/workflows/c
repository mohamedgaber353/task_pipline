name: C Build and Run

on:
  push:
    branches: [ "main" ]
  pull_request:
    branches: [ "main" ]

jobs:
  build:
    runs-on: ubuntu-latest

    steps:
    - name: Checkout repository
      uses: actions/checkout@v3

    - name: Install GCC
      run: sudo apt-get install -y gcc

    - name: Build the C program
      run: gcc -o hello main.c

    - name: Run the program
      run: ./hello

